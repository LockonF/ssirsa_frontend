md-card(flex)
    md-card-content


        h2.md-display-2 {{'Category.title' | translate}}


        div(flex layout-lt-md='column' layout-gt-md='row')
            div(flex layout='column' layout-align='space-around stretch')
                md-autocomplete(
                md-selected-item='vm.categoria'
                md-selected-item-change='vm.selectedItemChange(vm.categoria)'
                md-items = 'tipo in vm.search_items'
                md-item-text='tipo.nombre'
                md-min-length=3
                md-search-text-change='vm.lookup(vm.searchText)'
                md-search-text='vm.searchText'
                md-menu-class='autocomplete-custom-template'
                md-floating-label='{{"Category.lookup" | translate}}'
                )
                    md-item-template
                        span.item-title()
                            md-icon(md-font-icon='zmdi zmdi-truck')
                            span {{tipo.nombre}}
                md-virtual-repeat-container(flex id='vertical_container')
                    div(flex md-virtual-repeat='tipo in vm.categoria_list')
                        md-list(flex)
                            div(flex ng-click='vm.clickRepeater(tipo)')
                                md-list-item(flex md-ink-ripple)
                                    md-icon(md-font-icon="zmdi zmdi-boat")
                                    span {{tipo.nombre}}
                                md-divider

            div(flex layout-align='start stretch' layout='column')
                h3.md-display-1() {{'Category.info' | translate}}
                form(name='inputForm')
                    md-input-container.md-block
                        label {{ 'Category.name' | translate }}
                        input(type='text' name='nombre' ng-model='vm.categoria.nombre' ng-required='true')
                        div(ng-messages='inputForm.nombre.$error')
                            div(ng-message='required') {{'MAIN.GENERAL.REQUIRED_FIELD' | translate}}
                    md-input-container.md-block
                        label {{ 'Category.description' | translate }}
                        input(type='text' name='descripcion' ng-model='vm.categoria.descripcion' ng-required='true')
                        div(ng-messages='inputForm.descripcion.$error')
                            div(ng-message='required') {{'MAIN.GENERAL.REQUIRED_FIELD' | translate}}

                div(layout='row' layout-align='end center')
                    md-button.md-raised.md-primary(ng-if='vm.categoria.id!=null && vm.categoria.id!=undefined' ng-disabled='inputForm.$invalid' ng-click='vm.update()') {{ "MAIN.BUTTONS.UPDATE" | translate}}
                    md-button.md-raised.md-primary(ng-if='vm.categoria.id==null || vm.categoria.id==undefined' ng-disabled='inputForm.$invalid' ng-click='vm.create()') {{ "MAIN.BUTTONS.SUBMIT" | translate}}
                    md-button.md-raised.md-primary(ng-click='vm.cancel()') {{'MAIN.BUTTONS.CLEAR_FIELDS' | translate}}
                    md-button.md-raised.md-warn(ng-if='vm.categoria.id!=null && vm.categoria.id!=undefined' ng-click='vm.remove()') {{'MAIN.BUTTONS.DELETE' | translate}}