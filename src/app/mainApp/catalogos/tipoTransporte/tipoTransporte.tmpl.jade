md-card(flex)
    md-card-content


        h2.md-display-2 {{'Transport_Kind.title' | translate}}


        div(flex layout-lt-md='column' layout-gt-md='row')
            div(flex layout='column' layout-align='space-around stretch')
                md-autocomplete(
                    md-selected-item='vm.tipo_transporte'
                    md-selected-item-change='vm.selectedItemChange(vm.tipo_transporte)'
                    md-items = 'tipo in vm.search_items'
                    md-item-text='tipo.descripcion'
                    md-min-length=3
                    md-search-text-change='vm.lookup(vm.searchText)'
                    md-search-text='vm.searchText'
                    md-menu-class='autocomplete-custom-template'
                    md-floating-label='{{"Transport_Kind.lookup" | translate}}'
                )
                    md-item-template
                        span.item-title()
                            md-icon(md-font-icon='zmdi zmdi-truck')
                            span {{tipo.descripcion}}
                md-virtual-repeat-container(flex id='vertical_container')
                    div(flex md-virtual-repeat='tipo in vm.tipo_transporte_list')
                        md-list(flex)
                            div(flex ng-click='vm.clickRepeater(tipo)')
                                md-list-item(flex md-ink-ripple)
                                    md-icon(md-font-icon="zmdi zmdi-boat")
                                    span {{tipo.descripcion}}
                                md-divider

            div(flex layout-align='start stretch' layout='column')
                h3.md-display-1() {{'Transport_Kind.info' | translate}}
                form(name='inputForm')
                    md-input-container.md-block
                        label {{ 'Transport_Kind.description' | translate }}
                        input(type='text' name='descripcion' ng-model='vm.tipo_transporte.descripcion' ng-required='true')
                        div(ng-messages='inputForm.descripcion.$error')
                            div(ng-message='required') {{'MAIN.GENERAL.REQUIRED_FIELD' | translate}}

                md-button.md-raised.md-primary(ng-if='vm.tipo_transporte.id!=null && vm.tipo_transporte.id!=undefined' ng-disabled='inputForm.$invalid' ng-click='vm.update()') {{ "MAIN.BUTTONS.UPDATE" | translate}}
                md-button.md-raised.md-primary(ng-if='vm.tipo_transporte.id==null || vm.tipo_transporte.id==undefined' ng-disabled='inputForm.$invalid' ng-click='vm.create()') {{ "MAIN.BUTTONS.SUBMIT" | translate}}
                md-button.md-raised.md-primary(ng-click='vm.cancel()') {{'MAIN.BUTTONS.CLEAR_FIELDS' | translate}}
                md-button.md-raised.md-warn(ng-if='vm.tipo_transporte.id!=null && vm.tipo_transporte.id!=undefined' ng-click='vm.remove()') {{'MAIN.BUTTONS.DELETE' | translate}}